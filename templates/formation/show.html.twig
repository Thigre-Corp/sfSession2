{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}

<div>
    <h1>Hello {{ controller_name }}!</h1>

    <h2>Sessions programmées pour la Formation {{formation}}</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Début
                </th>
                <th>
                    Fin
                </th>
                <th>
                    Stagiaires Inscrits
                </th>
                <th>
                    Places Restantes
                </th>
                {% if auth %}
                <th colspan="2">
                    Administration
                </th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for row in formation.sessions %}
                <tr>
                    <td>
                        <a href="{{ path('show_session', {'id' : row.Id} ) }}">{{row}}</a>
                    </td>
                    <td>
                        {{row.dateDebut | date("d/m/Y")}}
                    </td>
                    <td>
                        {{row.dateFin | date("d/m/Y")}}
                    </td>
                    <!-- ATTENTION -->
                    <td>
                        {{row.NombrePlacesTotales - row.NombrePlacesReservees}}
                    </td>
                    <td>
                        {{row.NombrePlacesReservees}}
                    </td>
                {% if auth %}
                    <td>
                        <button
                            class="btn btn-warning js-open-modal"
                            data-url="{{ path('formation_edit', {'id': row.id}) }}"
                            data-title="Éditer une formation">
                            Éditer
                        </button>
                    </td>
                    <td><a href="{{ path('delete_formation', {'id': row.id}) }}" class="btn btn-danger">Supprimer</a></td>
                {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
