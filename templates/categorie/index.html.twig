{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}

<div>
    <h1>Hello {{ controller_name }}!</h1>
</div>

    <table class="table table-striped table-bordered mt-3">
        <caption class="h2 text-center" style="caption-side: top;">
            Liste des catégories:
        </caption>
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                    {% if auth %}<th colspan="2">Administration</th>{% endif %}
            </tr>
        </thead>
        <tbody>
            {% for row in categories %}
                <tr>
                    <td>
                        <p class="text-success"> {{row}}  </p>
                    </td>
                {% if auth %}
                    <td><a href="{{ path('edit_categorie', {'id': row.id}) }}" class="btn btn-warning" >Éditer</a></td>
                    <td><a href="{{ path('delete_categorie', {'id': row.id}) }}" class="btn btn-danger">Supprimer</a></td>
                {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% if auth %}
    <div class="create">
        <a href="{{ path('categorie_new') }}" class="btn btn-success">Créer une categorie</a>
    </div>
{% endif %}

{% endblock %}
