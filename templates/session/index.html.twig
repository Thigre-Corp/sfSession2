{% extends 'base.html.twig' %}

{% block title %}Hello SessionController!{% endblock %}

{% block body %}

<div>
    <h1>Hello {{ controller_name }}!</h1>
    <div class="d-inline-flex">
        {% if form ?? null %}
            {{ form_start(form) }}
                {{ form_widget(form.nom) }}{{ form_widget(form.submit) }}
            {{ form_end(form) }}
        {% endif %}
    </div>
</div>

{% if not foundSessions %}
    <table class="table table-striped table-bordered mt-3">
        <caption class="h2 text-center" style="caption-side: top;">
            Liste Sessions actives:
        </caption>
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Nb Places</th>
                <th>Nb Places Réservées</th>
                <th>Nb Place Restantes</th>
                    {% if auth %}<th colspan="2">Administration</th>{% endif %}
            </tr>
        </thead>
        <tbody>
            {% for row in activeSessions %}
                <tr>
                    <td>
                        <a class="text-success" href="{{ path('show_session', {'id' : row.Id}) }}"> {{row}}  </a>
                    </td>
                    <td>
                        {{row.dateDebut | date('d/m/Y')}}
                    </td>
                    <td>
                        {{row.dateFin | date('d/m/Y')}}
                    </td>
                    <td>
                        {{row.nombrePlacesTotales}}
                    </td>
                    <td>
                        {{row.nombrePlacesReservees}}
                    </td>
                    <td>
                        {{row.nombrePlacesTotales - ( row.nombrePlacesReservees + row.StagiairesNumber )}}
                    </td>
                {% if auth %}
                    <td><a href="{{ path('edit_session', {'id': row.id}) }}" class="btn btn-warning" >Éditer</a></td>
                    <td><a href="{{ path('delete_session', {'id': row.id}) }}" class="btn btn-danger">Supprimer</a></td>
                {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <table class="table table-striped table-bordered mt-3">
        <caption class="h2 text-center" style="caption-side: top;">
            Liste Sessions à venir:
        </caption>
